{
  "name": "polyloft-language-support",
  "displayName": "Polyloft Language Support",
  "description": "Language support for Polyloft programming language including syntax highlighting, linting, and auto-completion",
  "version": "0.1.2",
  "publisher": "polyloft",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "polyloft",
    "pf",
    "language",
    "syntax"
  ],
  "activationEvents": [
    "onLanguage:polyloft"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "polyloft",
        "aliases": [
          "Polyloft",
          "pf"
        ],
        "extensions": [
          ".pf",
          ".pfx"
        ],
        "configuration": "./language-configuration/language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "polyloft",
        "scopeName": "source.polyloft",
        "path": "./syntaxes/polyloft.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Polyloft",
      "properties": {
        "polyloft.linting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable linting for Polyloft files"
        },
        "polyloft.linting.onType": {
          "type": "boolean",
          "default": true,
          "description": "Enable linting while typing"
        },
        "polyloft.completion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable auto-completion"
        },
        "polyloft.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        },
        "polyloft.interpreterPath": {
          "type": "string",
          "default": "polyloft",
          "description": "Path to the Polyloft CLI executable (default: 'polyloft')"
        }
      }
    },
    "commands": [
      {
        "command": "polyloft.runFile",
        "title": "Run Polyloft File",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "polyloft.runFile",
          "when": "resourceLangId == polyloft",
          "group": "navigation@1"
        }
      ],
      "editor/context": [
        {
          "command": "polyloft.runFile",
          "when": "resourceLangId == polyloft",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "polyloft.runFile",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n",
        "when": "editorTextFocus && resourceLangId == polyloft"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
